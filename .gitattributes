# Auto detect text files and perform LF normalization
* text=auto

# PowerShell files
*.ps1 text eol=crlf
*.psm1 text eol=crlf
*.psd1 text eol=crlf

# C# files
*.cs text eol=crlf
*.csproj text eol=crlf
*.sln text eol=crlf

# Windows batch/cmd files (must be CRLF)
*.cmd text eol=crlf
*.bat text eol=crlf

# Config files
*.json text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Binary files
*.exe binary
*.dll binary
*.ico binary
*.png binary
*.jpg binary
*.gif binary

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf